{
  "compilerOptions": {
    "target": "ES2015",
    "lib": [
      "ES5",
      "ES2015",
      "ES2017",
      "ES2018",
      "ESNext",
      "DOM",
    ],
    "types": [
      "adaptive-scale",
      "loglevel",
      "node",
      "pixi.js"
    ],
    "experimentalDecorators": true,
    "strict": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "sourceMap": true,
    "outDir": "./dist/",
    "baseUrl": "./",
    "paths": {
      "~*": ["./app/src/*"]
    },
    "module": "ES2015",
    "esModuleInterop": true,
  },
  "exclude": [
    "node_modules",
    ".cache",
    "**/dist/**"
  ]
}