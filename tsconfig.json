{
  "compilerOptions": {
    "target": "ES2015",
    "lib": [
      "ES5",
      "ES2015",
      "ES2017",
      "ES2018",
      "ESNext",
      "DOM",
    ],
    "types": [
      "adaptive-scale",
      "mobx",
      "node",
      "pixi.js",
      "vimeo__player"
    ],
    "strict": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "sourceMap": true,
    "outDir": "./dist/",
    "baseUrl": "./",
    "paths": {
      "~*": ["./src/*"]
    },
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules",
    ".cache",
    "dist/**"
  ]
}
