{
  "compilerOptions": {
    "target": "ES2015",
    "outDir": "./app/dist/",
    "baseUrl": ".",
    "paths": {
      "~*": ["./app/src/*"]
    },
    "module": "ES2015",
    "lib": [
      "ES5",
      "ES2015",
      "ES2017",
      "ES2018",
      "ESNext",
      "DOM"
    ],
    "experimentalDecorators": true,
    "removeComments": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "sourceMap": true
  }
}